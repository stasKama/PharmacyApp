@model PharmacyApp.Models.Medicine

@{
    ViewData["Title"] = "Edit " + Model.Name;
}

<h2>Edit @Model.Name</h2>

<form asp-action="Edit">
    <div class="form-horizontal">
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="Name" class="col-md-3 control-label"></label>
            <div class="col-md-9">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="PrescriptionMedicine" class="col-md-3 control-label"></label>
            <div class="col-md-9">
                <input asp-for="PrescriptionMedicine" type="checkbox" ng-model="checkedMedicine" ng-init="checkedMedicine=false" />
                <span class="label" ng-class="checkedMedicine === false ? 'label-success' : 'label-danger'">{{checkedMedicine === false ? 'Без рецепта' : 'С рецептом'}}</span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="AvailabilityPharmacy" class="col-md-3 control-label"></label>
            <div class="col-md-9">
                <input asp-for="AvailabilityPharmacy" type="checkbox" ng-model="checkedPharmacy" ng-init="checkedPharmacy=false" />
                <span class="label" ng-class="checkedPharmacy ? 'label-success' : 'label-danger'">{{checkedPharmacy ? 'Есть в наличии' : 'Нет в наличии'}}</span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Price" class="col-md-3 control-label"></label>
            <div class="col-md-9">
                <input asp-for="Price" class="form-control" pattern="\d+(,\d{2})?" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Dosage" class="col-md-3 control-label"></label>
            <div class="col-md-9">
                <input asp-for="Dosage" class="form-control" type="number" step="1" min="1" />
                <span asp-validation-for="Dosage" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Description" class="col-md-3 control-label"></label>
            <div class="col-md-9">
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="CompanyId" class="col-md-3 control-label"></label>
            <div class="col-md-9">
                <select asp-for="CompanyId" class="form-control" asp-items="ViewBag.Companies"></select>
                <span asp-validation-for="CompanyId" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="InternationalNameId" class="col-md-3 control-label"></label>
            <div class="col-md-9">
                <select asp-for="InternationalNameId" class="form-control" asp-items="ViewBag.InternationalNames"></select>
                <span asp-validation-for="InternationalNameId" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-3 col-md-9">
                <input type="submit" value="Save" class="btn btn-default button" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-controller="Pharmacy" asp-action="CatalogPharmacy">Back to Catalog</a>
</div>
